PROGRAM EXERCICIO_3;
USES CRT;
VAR
   NOME           : STRING[50];
   TAMANHO        : INTEGER;
   TECLA          : CHAR;
BEGIN
     CLRSCR;
     WRITELN ('DIGITE UMA STRING');
     READLN (NOME);
     TAMANHO := LENGTH(NOME);
     WRITELN ('TAMANHO = ',TAMANHO);
     TECLA := READKEY;
END.