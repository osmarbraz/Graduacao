PROGRAM EXERCICIO_2;
USES CRT;
VAR
   NOME                          : STRING;
   SALARIO_ANTIGO,SALARIO_NOVO   : REAL;
   TECLA                         : CHAR;
BEGIN
     CLRSCR;
     WRITELN ('DIGITE O NOME');
     READLN (NOME);
     WRITELN ('DIGITE O SALARIO ANTIGO');
     READLN (SALARIO_ANTIGO);
     IF SALARIO_ANTIGO > 100000 THEN
        SALARIO_NOVO := SALARIO_ANTIGO * 1.05
     ELSE
         IF (SALARIO_ANTIGO > 60000) AND (SALARIO_ANTIGO<=100000) THEN
            SALARIO_NOVO := SALARIO_ANTIGO * 1.15
         ELSE
             IF (SALARIO_ANTIGO > 30000) AND (SALARIO_ANTIGO <= 60000 ) THEN
                 SALARIO_NOVO := SALARIO_ANTIGO * 1.25
             ELSE
                 IF (SALARIO_ANTIGO > 20000.00) AND (SALARIO_ANTIGO <= 30000) THEN
                    SALARIO_NOVO := SALARIO_ANTIGO * 1.35
                 ELSE
                     SALARIO_NOVO := SALARIO_ANTIGO * 1.50;
     WRITELN (NOME,' = ',SALARIO_ANTIGO:0:2,'= > ',SALARIO_NOVO:0:2);
     TECLA := READKEY
END.