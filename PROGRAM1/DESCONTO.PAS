PROGRAM DESCONTO_IR;
USES CRT;
VAR
   NUM_HORAS_TRABA,NUM_DEPENDENTES,SALARIO1,SALARIO2,SALARIO_BRUTO :REAL;
   SALARIO_LIQUIDO,SAL_LIQ1,SAL_LIQ2,IR,INSS,DESCONTO              :REAL;
   NOME                                                            :STRING [10];
BEGIN
     CLRSCR;
     WRITELN('DIGITE O NOME DO FUNCIONARIO');
     READLN (NOME);
     WRITELN ('DIGITE O NUMERO DE HORAS TRABALHADAS');
     READLN (NUM_HORAS_TRABA);
     WRITELN ('DIGITE O NUMERO DE DEPENDENTES');
     READLN (NUM_DEPENDENTES);
     SALARIO1 := NUM_HORAS_TRABA * 12;
     SALARIO2 := NUM_DEPENDENTES * 40;
     SALARIO_BRUTO := SALARIO1 + SALARIO2;
     INSS := SALARIO_BRUTO * 0.085;
     IR := SALARIO_BRUTO * 0.05;
     DESCONTO := INSS + IR;
     SALARIO_LIQUIDO := SALARIO_BRUTO - DESCONTO;
     WRITELN('NOME');
     WRITELN(SALARIO_LIQUIDO);
END.
