PROGRAM AREA_DE_TRIANGULO;
USES CRT;
VAR
   BASE,ALTURA : INTEGER;
   AREA        : REAL;

BEGIN
     CLRSCR;
     WRITE('QUAL A BASE -: ');
     READLN(BASE);
     WRITE('QUAL A ALTURA : ');
     READLN(ALTURA);
     AREA := (BASE*ALTURA)/2;
     WRITELN('A AREA = ',AREA:0:2);
     REPEAT UNTIL KEYPRESSED

END.
