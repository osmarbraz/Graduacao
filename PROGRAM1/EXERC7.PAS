PROGRAM EXERCICIO_7;
USES CRT;
VAR
    CODIGO_PRIMEIRO,CODIGO_ULTIMO,NUMERO_INTEIRO,TAMANHO,MEIO : INTEGER;
    NUMERO_STRING,PRIMEIRO,ULTIMO                             : STRING;
    TECLA                                                     : CHAR;
BEGIN
     CLRSCR;
     WRITELN ('DIGITE UM NUMERO');
     READLN (NUMERO_INTEIRO);
     STR (NUMERO_INTEIRO,NUMERO_STRING);
     TAMANHO := LENGTH(NUMERO_STRING);
     PRIMEIRO := NUMERO_STRING [1];
     ULTIMO := NUMERO_STRING [TAMANHO];
     IF TAMANHO MOD 2 <> 0 THEN
        MEIO := (TAMANHO DIV 2) + 1;
     CODIGO_PRIMEIRO := ORD (NUMERO_STRING[1]);
     CODIGO_ULTIMO := ORD (NUMERO_STRING[TAMANHO]);
     WRITELN ('TAMANHO : ',TAMANHO);
     WRITELN ('PRIMEIRO DIGITO : ', PRIMEIRO);
     WRITELN ('ULTIMO DIGITO : ', ULTIMO);
     WRITELN ('CARACTER DO MEIO : ', NUMERO_STRING [MEIO]);
     WRITELN ('CODIGO DO PRIMEIRO : ', CODIGO_PRIMEIRO);
     WRITELN ('CODIGO DO ULTIMO : ', CODIGO_ULTIMO);
     TECLA := READKEY
END.