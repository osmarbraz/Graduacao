PROGRAM MASSA_DE_MATERIAL;
USES CRT;
VAR
    MASSA,MASSAINICIAL,MASSAFINAL :REAL;
    CONT: INTEGER;
BEGIN
     CLRSCR;
     MASSA:= 0;
     CONT:=0;
     WRITELN('ENTRE COM A MASSA DO MATERIAL EM GRAMAS');
     READLN(MASSA);
     MASSAINICIAL := MASSA;
     MASSAFINAL:= MASSA;
     WHILE MASSAFINAL >= 0.5 DO
        BEGIN
        MASSA:= MASSAFINAL/2;
        MASSAFINAL:=MASSA;
        CONT:= CONT + 50;
        END;
     WRITELN('MASSA INICIAL :',MASSAINICIAL,'GRAMAS');
     WRITELN('MASSA FINAL :',MASSAFINAL,'GRAMAS');
     WRITELN('TEMPO DE DECOMPOSICAO :',CONT,' SEGUNDOS');
END.