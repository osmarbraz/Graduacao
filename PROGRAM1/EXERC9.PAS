
PROGRAM EXERCICIO_9;
USES CRT;
VAR
   PALAVRA : STRING;
   TAMANHO,MEIO     : INTEGER;
   TECLA            : CHAR;
BEGIN
     CLRSCR;
     WRITELN ('DIGITE UMA PALAVRA EM MINUSCULA');
     READLN (PALAVRA);
     TAMANHO := LENGTH (PALAVRA);
     IF TAMANHO MOD 2 <> 0 THEN
        BEGIN
             MEIO := ( TAMANHO DIV 2 ) + 1;
             WRITELN (' O TERMO DO MEIO EM MAISCULA : ',UPCASE (PALAVRA [MEIO]));
        END
     ELSE
         WRITELN ('A PALAVRA NAO POSSUI TERMO DO MEIO');
     TECLA := READKEY
END.