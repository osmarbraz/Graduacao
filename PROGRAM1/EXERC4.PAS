PROGRAM EXERCICIO_4;
USES CRT;
VAR
   NOME1,NOME2,SOMA   : STRING;
   TECLA              : CHAR;
BEGIN
     CLRSCR;
     WRITELN ('DIGITE O NOME 1');
     READLN (NOME1);
     WRITELN ('DIGITE O NOME 2');
     READLN (NOME2);
     SOMA := CONCAT (NOME1,NOME2);
     WRITELN (SOMA);
     TECLA := READKEY
END.