PROGRAM MEDIA_ARITMETICA;
USES CRT;
VAR
   VALOR1,VALOR2,VALOR3,VALOR4,SOMA : INTEGER;
   MEDIA                            : REAL;
BEGIN
     CLRSCR;
     WRITELN('DIGITE OS QUATRO VALORES');
     READLN (VALOR1);
     READLN (VALOR2);
     READLN (VALOR3);
     READLN (VALOR4);
     SOMA := VALOR1 + VALOR2 + VALOR3 + VALOR4;
     MEDIA := SOMA / 4;
     WRITELN('MEDIA = ',MEDIA)
END.

