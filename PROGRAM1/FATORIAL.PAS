PROGRAM FATORIAL_DE_N;
USES CRT;
VAR
   FATOR,CONT,N : INTEGER;
BEGIN
     CLRSCR;
     WRITELN('DIGITE UM NUMERO PARA CALCULO DE FATORIAL');
     READLN(N);
     CONT := 1;
     FATOR := 1;
     WHILE CONT <= N DO
         BEGIN
              FATOR := FATOR * CONT;
              CONT:=CONT+1;
         END;
     WRITELN('O FATORIAL DO NUMERO ',N,' E = ',FATOR);
     REPEAT UNTIL KEYPRESSED;

END.